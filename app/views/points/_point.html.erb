<div class="row clearfix">
  <% if point.completed? %>
    <div class="complete">
      <%= link_to complete_item_point_path(@item, point.id), method: :patch do %>
        <i style="opacity: 0.8;" class="fa fa-check"></i>
      <% end %>
    </div>
    <div class="point">
      <p style="opacity: 0.8;"><strike><%= point.content %></strike></p>
    </div>
    <div class="trash">
      <%= link_to item_point_path(@item, point.id), method: :delete, data: {confirm: "Are you sure?"} do %>
        <i class="fa fa-trash"></i>
      <% end %>
    </div>
  <% else %>
    <div class="complete">
      <%= link_to complete_item_point_path(@item, point.id), method: :patch do %>
        <i style="opacity: 0.8;" class="fa fa-check"></i>
      <% end %>
    </div>
    <div class="point">
      <p><%= point.content %></p>
    </div>
    <div class="trash">
      <%= link_to item_point_path(@item, point.id), method: :delete, data: {confirm: "Are you sure?"} do %>
        <i class="fa fa-trash"></i>
      <% end %>
    </div>
  <% end %>
</div>